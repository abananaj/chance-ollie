{
  "version": 3,
  "title": "Chance Theater",
  "description": "Custom child theme of Ollie",
  "slug": "chance-theater",
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "background": {
      "backgroundImage": true,
      "backgroundSize": true
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "dimensions": {
      "aspectRatio": true,
      "minHeight": true
    },
    "layout": {
      "allowCustomContentAndWideSize": true,
      "allowEditing": true,
      "contentSize": "1360px",
      "wideSize": "100%"
    },
    "lightbox": {
      "allowEditing": true,
      "enabled": true
    },
    "position": {
      "sticky": true
    },
    "shadow": {
      "defaultPresets": true,
      "presets": [
        {
          "name": "Inset",
          "slug": "inset",
          "shadow": "inset 0px 10px 27px -4px rgba(0, 0, 0, 0.09);"
        }
      ]
    },
    "spacing": {
      "blockGap": true,
      "customSpacingSize": true,
      "defaultSpacingSizes": true,
      "margin": true,
      "padding": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingScale": {
        "increment": 1.618,
        "mediumStep": 1,
        "operator": "*",
        "steps": 7,
        "unit": "rem"
      }
    },
    "color": {
      "background": true,
      "button": true,
      "caption": true,
      "heading": true,
      "link": true,
      "text": true,
      "custom": true,
      "customDuotone": true,
      "customGradient": true,
      "defaultDuotone": true,
      "defaultGradients": true,
      "defaultPalette": false,
      "duotone": [
        {
          "name": "Base/Complementary",
          "slug": "base-comp-duo",
          "colors": ["#05051A", "#144FC4"]
        },
        {
          "name": "Base/Contrast",
          "slug": " base-contrast-duo",
          "colors": ["#05051A", "#FFFAFD"]
        },
        {
          "name": "Base",
          "slug": "base-duo",
          "colors": ["#05051A", "#29F2F2"]
        },
        {
          "name": "Contrast",
          "slug": "contrast-duo",
          "colors": ["#fffafd", "#cbfdbc"]
        },
        {
          "name": "Accent",
          "slug": "accent-duo",
          "colors": ["#E322A9", "#0FF207"]
        }
      ],
      "gradients": [
        {
          "name": "Chance Blues",
          "slug": "chance-blues",
          "gradient": "linear-gradient(180deg, #144fc4ff 0%, #000F5CFF 60.9%, #05051aff 100%)"
        },
        {
          "name": "Blue Trio",
          "slug": "blue-trio",
          "gradient": "linear-gradient(134.5deg, #29F2F2FF 0%, #144FC4FF 60.9%, #000f5cff 100%)"
        },
        {
          "name": "Revolver Cerise",
          "slug": "revolver-cerise",
          "gradient": "linear-gradient(180deg, #E322A9ff 0%, #25041bff 100%)"
        },
        {
          "name": "Aqua Cerulean",
          "slug": "aqua-cerulean",
          "gradient": "linear-gradient(133.8deg, #29F2F2FF 0%, #144FC4FF 100%)"
        },
        {
          "name": "Lucky Gossip",
          "slug": "lucky-gossip",
          "gradient": "linear-gradient(180deg, #b9fca6ff 0%, #000f5cff 100%)"
        },
        {
          "name": "Harlequin Radial",
          "slug": "harlequin-radial",
          "gradient": "radial-gradient(circle, #0ff207ff 0%, #2bf3f3ff 100%)"
        }
      ],
      "palette": [
        { "name": "Hollywood Cerise", "color": "#E322A9", "slug": "hollywood-cerise" },
        { "name": "Harlequin", "color": "#0FF207", "slug": "harlequin" },
        { "name": "Aqua", "color": "#29F2F2", "slug": "aqua" },
        { "name": "Cerulean Blue", "color": "#144FC4", "slug": "cerulean-blue"},
        { "name": "Lucky Point", "color": "#000F5C", "slug": "lucky-point" },
        { "name": "Ebony", "color": "#05051A", "slug": "ebony" },
        { "name": "Revolver", "color": "#24041B", "slug": "revolver" },
        { "name": "Gossip", "color": "#cbfdbc", "slug": "gossip" },
        { "name": "Hint of Red", "color": "#FFFAFD", "slug": "hint-of-red" },
        { "name": "Mint Tulip", "color": "#bafaf9", "slug": "mint-tulip" },
        { "name": "Jaguar", "color": "#03030C", "slug": "jaguar" },
        { "name": "Light Orchid", "slug": "light-orchid", "color": "#FFB2E8" },
        { "name": "Romance", "slug": "romance", "color": "#FFFDFD" },
        { "name": "Base", "slug": "base", "color": "#05051A" },
        { "name": "Complementary", "slug": "comp", "color": "#144FC4" },
        { "name": "Contrast", "slug": "contrast", "color": "#FFFAFD" },
        { "name": "Accent", "slug": "accent", "color": "#E322A9" },
        { "name": "Highlight", "slug": "highlight", "color": "#0FF207" },
        { "name": "Background", "slug": "bg", "color": "#05051A" },
        { "name": "Text", "slug": "txt", "color": "#FFFAFD" },
        { "name": "Background Alt", "slug": "bgalt", "color": "#24041B" },
        { "name": "Text Alt", "slug": "txtalt", "color": "#FFFDFD" },
        { "name": "Link", "slug": "link", "color": "#0FF207" },
        { "name": "Light", "slug": "light", "color": "#bafaf9" },
        { "name": "Dark", "slug": "dark", "color": "#03030C" },
        { "name": "Brand", "slug": "primary", "color": "#144fc4" },
        { "name": "Brand Accent", "slug": "primary-accent", "color": "#0ff207"},
        { "name": "Brand Alt", "slug": "primary-alt", "color": "#29f2f2" },
        { "name": "Brand Alt Accent", "slug": "primary-alt-accent", "color": "#000f5c" },
        { "name": "Contrast", "slug": "main", "color": "#fffafd" },
        { "name": "Contrast Accent", "slug": "main-accent", "color": "#cbfdbc" },
        { "name": "Base", "slug": "base", "color": "#05051a" },
        { "name": "Base Accent", "slug": "secondary", "color": "#bafaf9" },
        { "name": "Tint", "slug": "tertiary", "color": "#FFB2E8" },
        { "name": "Border Base", "slug": "border-light", "color": "#03030C" },
        { "name": "Border Contrast", "slug": "border-dark", "color": "#144FC4" }
      ]
    },
    "custom": {
      "btn": {
        "bg": "#BB6869",
        "bgHov": "#F2CECF",
        "txt": "#fff",
        "txtHov": "#000000",
        "trans": "500ms"
      },
      "fontWeight": {
        "thin": 100,
        "extra-light": 200,
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semi-bold": 600,
        "bold": 700,
        "extra-bold": 800,
        "black": 900
      },
      "lineHeight": {
        "heading": 1.5,
        "none": 0,
        "single": 1,
        "tight": 1.1,
        "snug": 1.2,
        "base": 1.3,
        "body": 1.3,
        "normal": 1.3,
        "relaxed": 1.618,
        "loose": 2.62
      },
      "transition": {
        "heading": "500ms"
      },
      "fontVarSet": {
        "caption": "'wght' 300",
        "nav": "'wdth' 100, 'wght' 300;",
        "navHov": "'wdth' 130, 'wght' 300;",
        "btn": "'wdth' 100, 'wght' 300;",
        "btnHov": "'wdth' 150, 'wght' 300;",
        "body": "'wdth' 100, 'wght' 300;",
        "display": "'wght' 300;"
      }
    },
    "typography": {
      "customFontSize": true,
      "defaultFontSizes": false,
      "dropCap": true,
      "fluid": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "lineHeight": true,
      "textAlign": true,
      "textColumns": true,
      "textDecoration": true,
      "textTransform": true,
      "writingMode": true,
      "textIndent": true,
      "fontFamilies": [
        {
          "name": "Gabarito",
          "slug": "gabarito",
          "fontFamily": "Gabarito, sans-serif",
          "fontFace": [
            {
              "fontStyle": "normal",
              "fontFamily": "Gabarito",
              "fontWeight": "400 900",
              "src": "https://chancetheater.local/wp-content/themes/chance-theater/assets/fonts/Gabarito/Gabarito-VariableFont_wght.ttf"
            }
          ]
        },
        {
          "name": "Space Grotesk",
          "slug": "space-grotesk",
          "fontFamily": "\"Space Grotesk\", sans-serif",
          "fontFace": [
            {
              "fontFamily": "\"Space Grotesk\", sans-serif",
              "fontStyle": "normal",
              "fontWeight": "300 700",
              "src": "https://chancetheater.local/wp-content/themes/chance-theater/assets/fonts/Space_Grotesk/SpaceGrotesk-VariableFont_wght.ttf"
            }
          ]
        },
        {
          "name": "Crimson Pro",
          "slug": "crimson-pro",
          "fontFamily": "\"Crimson Pro\", serif",
          "fontFace": [
            {
              "fontFamily": "\"Crimson Pro\", serif",
              "fontStyle": "italic",
              "fontWeight": "200 900",
              "src": "https://chancetheater.local/wp-content/themes/chance-theater/assets/fonts/Crimson_Pro/CrimsonPro-Italic-VariableFont_wght.ttf"
            },
            {
              "fontFamily": "\"Crimson Pro\", serif",
              "fontStyle": "normal",
              "fontWeight": "200 900",
              "src": "https://chancetheater.local/wp-content/themes/chance-theater/assets/fonts/Crimson_Pro/CrimsonPro-VariableFont_wght.ttf"
            }
          ]
        },
        {
          "name": "Inconsolata",
          "slug": "inconsolata",
          "fontFamily": "Inconsolata, monospace",
          "fontFace": [
            {
              "fontFamily": "Inconsolata, monospace",
              "fontStyle": "normal",
              "fontWeight": "200 900",
              "src": "https://chancetheater.local/wp-content/themes/chance-theater/assets/fonts/Inconsolata/Inconsolata-VariableFont_wdthwght.ttf"
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "h1",
          "size": "4.26rem",
          "name": "Heading 1"
        },
        {
          "slug": "h2",
          "size": "2.62rem",
          "name": "Heading 2"
        },
        {
          "slug": "h3",
          "size": "1.618rem",
          "name": "Heading 3"
        },
        {
          "slug": "h4",
          "size": "1.33rem",
          "name": "Heading 4"
        },
        {
          "slug": "h5",
          "size": "1.25rem",
          "name": "Heading 5"
        },
        {
          "slug": "h6",
          "size": "1.125rem",
          "name": "Heading 6"
        },
        {
          "slug": "xs",
          "size": ".56rem",
          "name": "Extra Small"
        },
        {
          "slug": "small",
          "size": ".833rem",
          "name": "Small"
        },
        {
          "slug": "base",
          "size": "calc(15px + 0.390625vw)",
          "name": "Base"
        },
        {
          "slug": "body",
          "size": "calc(15px + 0.390625vw)",
          "name": "Body"
        },
        {
          "slug": "medium",
          "size": "calc(15px + 0.390625vw)",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.33rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "1.618rem",
          "name": "XL"
        },
        {
          "slug": "xx-large",
          "size": "2.62rem",
          "name": "XXL"
        },
        {
          "slug": "xxx-large",
          "size": "4.26rem",
          "name": "XXXL"
        }
      ]
    }
  },
  "styles": {
    "border": {
      "color": "var:preset|custom|border|jaguar",
      "style": "solid",
      "width": "2px",
      "radius": "25px"
    },
    "color": {
      "background": "var:preset|color|ebony",
      "text": "var:preset|color|hint-of-red"
    }, 
    "typography": {
      "fontStyle": "normal",
      "fontWeight": "300",
      "fontFamily": "var:preset|font-family|inconsolata"
    },
    "blocks": {
      "core/image": {
        "border": {
          "radius": {
            "topLeft": "35px",
            "topRight": "35px",
            "bottomLeft": "35px",
            "bottomRight": "35px"
          }
        },
        "shadow": "var:preset|shadow|small-dark"
      },
      "core/media-text": {
        "color": { "background": "var:preset|color|gossip", "text": "var:preset|color|ebony" }

      },
      "core/pullquote": {
        "typography": {
          "fontStyle": "normal",
          "fontWeight": "400",
          "fontFamily": "var:preset|font-family|space-grotesk"
        },
        "border": {
          "top": {
            "color": "var:preset|color|harlequin",
            "style": "solid",
            "width": "5px"
          }
        }
      },
      "core/quote": {
        "typography": {
          "fontStyle": "normal",
          "fontWeight": "400",
          "fontFamily": "var:preset|font-family|space-grotesk"
        },
        "border": {
          "left": {
            "color": "var:preset|color|harlequin",
            "style": "solid",
            "width": "5px"
          }
        }
      },
      "core/button": {
        "typography": {
          "textTransform": "uppercase",
          "fontFamily": "var:preset|font-family|inconsolata",
          "fontSize": "var:preset|font-size|base"
        },
        "border": {
          "radius": {
            "topLeft": "25px",
            "topRight": "25px",
            "bottomLeft": "25px",
            "bottomRight": "25px"
          }
        },
        "spacing": {
          "padding": {
            "left": "var:preset|spacing|large",
            "right": "var:preset|spacing|large"
          }
        },
        "variations": {
          "outline": {
            "color": { "text": "var:preset|color|lucky-point" },
            "border": {
              "color": "var:preset|color|lucky-point",
              "width": "2px",
              "style": "solid"
            }
          },
          "button-brand": {
            "color": {
              "background": "var:preset|color|cerulean-blue",
              "text": "#FFFFFF"
            }
          },
          "button-brand-alt": {
            "color": {
              "background": "var:preset|color|hollywood-cerise"
            }
          },
          "button-dark": {
            "color": { "background": "var:preset|color|jaguar" }
          },
          "button-light": {
            "color": {
              "background": "var:preset|color|gossip",
              "text": "var:preset|color|jaguar"
            }
          },
          "secondary-button": {
            "color": { "text": "var:preset|color|ebony" }
          }
        }
      },
      "core/list": {
        "typography": {
          "fontFamily": "var:preset|font-family|space-grotesk",
          "fontSize": "var:preset|font-size|small"
        }
      },
      "core/details": {
        "typography": {
          "fontFamily": "var:preset|font-family|space-grotesk"
        }
      },
      "core/table": {
        "typography": {
          "fontFamily": "var:preset|font-family|space-grotesk",
          "fontStyle": "normal",
          "fontWeight": "400"
        }
      },
      "core/home-link": {
        "typography": {
          "fontFamily": "var:preset|font-family|gabarito",
          "textTransform": "none"
        }
      },
      "core/buttons": {
        "typography": {
          "fontFamily": "var:preset|font-family|inconsolata"
        }
      },
      "core/preformatted": {
        "typography": {
          "fontFamily": "var:preset|font-family|inconsolata"
        }
      },
      "core/code": {
        "typography": {
          "fontStyle": "normal",
          "fontWeight": "400",
          "fontFamily": "var:preset|font-family|inconsolata"
        }
      },
      "core/site-title": {
        "typography": {
          "fontStyle": "normal",
          "fontWeight": "900",
          "fontFamily": "var:preset|font-family|gabarito",
          "fontSize": "var:preset|font-size|xx-large"
        }
      },
      "core/group": {
        "spacing": {
          "margin": { "top": "0", "bottom": "0" },
          "blockGap": "0",
          "padding": { "right": "0", "left": "0" }
        }
      },
      "core/site-logo": {
        "spacing": {
          "margin": {
            "top": "0",
            "bottom": "0",
            "left": "var:preset|spacing|small",
            "right": "var:preset|spacing|small"
          },
          "padding": {
            "top": "0",
            "bottom": "0",
            "left": "var:preset|spacing|small",
            "right": "var:preset|spacing|small"
          }
        }
      },
      "core/site-tagline": {
        "typography": { "fontSize": "var:preset|font-size|base" }
      },
      "core/search": {
        "border": {
          "radius": {
            "topLeft": "25px",
            "topRight": "25px",
            "bottomLeft": "25px",
            "bottomRight": "25px"
          }
        }
      },
      "core/post-title": {
        "typography": {
          "fontFamily": "var:preset|font-family|inconsolata",
          "textTransform": "capitalize",
          "fontStyle": "normal",
          "fontWeight": "400",
          "letterSpacing": "0px"
        },
        "spacing": {
          "padding": { "top": "0", "bottom": "0" },
          "margin": { "top": "0", "bottom": "0" }
        }
      },
      "core/post-template": {
        "elements": {
          "link": {
            "color": { "text": "var:preset|color|mint-tulip" },
            ":hover": { "color": { "text": "var:preset|color|harlequin" } }
          }
        }
      }
    },
    "elements": {
      "button": {
        "spacing": {
          "padding": {
            "top": ".5rem",
            "right": "1rem",
            "bottom": ".5rem",
            "left": "1rem"
          }
        },
          "color": {
            "background": "var:preset|color|lucky-point",
            "text": "var:preset|color|romance"
          },
        "typography": {
          "fontSize": "var:preset|font-size|body",
          "fontWeight": "300",
          "textDecoration": "none"
        },
        ":hover": {
          "color": {
            "background": "var:preset|color|harlequin",
            "text": "var:preset|color|jaguar"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      },
      "caption": {
        "typography": {
          "fontFamily": "var:preset|font-family|crimson-pro",
          "fontSize": "var:preset|font-size|small",
          "fontWeight": "400"
        }
      },
      "cite": {
        "typography": {
          "fontStyle": "italic"
        }
      },
      "heading": {
        "typography": {
          "fontStyle": "normal",
          "fontWeight": "800",
          "fontFamily": "var:preset|font-family|gabarito",
          "letterSpacing": "1px",
          "textTransform": "none"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var:preset|font-size|h-1"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var:preset|font-size|h-2"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var:preset|font-size|h-3"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var:preset|font-size|h-4"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var:preset|font-size|h-5"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var:preset|font-size|h-6"
        }
      },
      "link": {
        "typography": { "textDecoration": "none" },
        "color": { "text": "var:preset|color|harlequin" },
        ":hover": {
          "color": {
            "text": "var:preset|color|hollywood-cerise"
          },
          "typography": { "textDecoration": "underline"}
        }
      }
    }
  },
  "customTemplates": [
    {
      "name": "page-no-title",
      "title": "Page (Full Width, No Title)",
      "postTypes": ["page"]
    },
    {
      "name": "single-venue",
      "title": "Single Venue",
      "postTypes": ["venue"]
    },
    {
      "name": "single-production",
      "title": "Single Production",
      "postTypes": ["production"]
    },
    {
      "name": "single-event",
      "title": "Single Event",
      "postTypes": ["event"]
    }
  ],
  "patterns": [
    "post-query-grid",
    "production-query-grid",
    "term-query-seasons",
    "term-query-series"
  ],
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    },
    {
      "name": "mega-menu",
      "title": "Mega menu",
      "area": "header"
    },
    {
      "name": "ticket-faq",
      "title": "Ticket FAQ",
      "area": "general"
    },
    {
      "name": "cta-subscribe",
      "title": "CTA Subscribe",
      "area": "general"
    }
  ]
}
